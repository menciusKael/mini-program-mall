 .returnDetailBox .userKeyIn {
  width: 100%;
  margin-top: 40rpx;
  height: auto;
  display: flex;
}

.returnDetailBox .userKeyIn .tip {
  flex-basis: 18%;
  /* ios hack */
  /* padding-top: 10rpx; */
}

.tipIos {
  padding-top: 10rpx;
}

.returnDetailBox .userKeyIn .tar {
  flex-basis: 82%;
  display: block;
  box-sizing: border-box;
  top: 0;
  /* android hack*/
  /* padding-top: 7rpx !important; */
  /* ios hack*/
  /* padding-top: 0rpx !important; */  
}
.tarAndroid{
  padding-top: 7rpx !important;
}
.tarIos{
  padding-top: 0rpx !important;
}

.productInfoBox {
  display: flex;
  width: 95%;
  margin: auto;
  margin-top: 20rpx;
  position: relative;
  box-sizing: border-box;
}

.productInfoBox .pimg {
  width: 200rpx;
  height: 200rpx;
}

.productInfoBox .productInfo {
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  margin-left: 15rpx;
}

.productInfoBox .productInfo .label {
  color: #afafaf;
}

.productInfoBox .productInfo .price {
  color: #ff784e;
}

.productInfoBox .buyNum {
  position: absolute;
  bottom: 0rpx;
  right: 0rpx;
}

.returnDetailBox {
  width: 100%;
  box-sizing: border-box;
  padding-left: 20rpx;
  padding-right: 20rpx;
  border-top: solid 12rpx #e8e8e8;
  border-bottom: solid 12rpx #e8e8e8;
  margin-top: 20rpx;
  padding-bottom: 20rpx;
  z-index: 1;
}

.returnDetailBox .returnReson {
  display: flex;
  justify-content: space-between;
  margin-top: 20rpx;
}

.returnDetailBox .returnReson .pleaseChoose {
  color: #949494;
}

.returnDetailBox .returnReson .pleaseChooseEd {
  color: black;
}

.returnDetailBox .returnMoney {
  margin-top: 40rpx;
}

.returnDetailBox .returnMoney .money {
  color: #ff4200;
}

/* 原因 */

.chooseReasonPage {
  z-index: 10;
}

.chooseReasonPage .mask {
  position: fixed;
  top: 0;
  left: 0;
  bottom: 0;
  right: 0;
  z-index: 20;
  background: rgba(0, 0, 0, 0.5);
  opacity: 0.5;
}

.chooseReasonPage .rettrnRes {
  position: fixed;
  bottom: 0;
  width: 100%;
  z-index: 30;
  background: white;
  border-top-left-radius: 20rpx;
  border-top-right-radius: 20rpx;
}

.chooseReasonPage .rettrnRes .title {
  text-align: center;
  margin-bottom: 10rpx;
  margin-top: 20rpx;
}

.chooseReasonPage .rettrnRes .radGro .radItem {
  position: relative;
  width: 95%;
  margin: auto;
  border-bottom: solid 1rpx #e8e8e8;
  padding: 18rpx 0rpx;
}

.chooseReasonPage .rettrnRes .radGro .rad {
  position: absolute;
  right: 0rpx;
}

.chooseReasonPage .rettrnRes .confirmBtn {
  width: 80%;
  margin: 20rpx auto;
  height: 60rpx;
  background: #ff4200;
  text-align: center;
  line-height: 60rpx;
  color: white;
}

.confirmBtnTJ {
  width: 80%;
  position: fixed;
  bottom: 20rpx;
  height: 60rpx;
  background: #ff4200;
  text-align: center;
  line-height: 60rpx;
  color: white;
  left: 70rpx;
}
