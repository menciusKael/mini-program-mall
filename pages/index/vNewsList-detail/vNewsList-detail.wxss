.vNewsList-detail .title {
  font-weight: 700rpx;
  font-size: 60rpx;
  display: flex;
  flex-wrap: wrap;
  text-indent: 30rpx;
  margin-top: 20rpx;
  margin-bottom: 20rpx;
}

.vNewsList-detail .publishData {
  float: left;
  margin-left: 30rpx;
  margin-right: 50rpx;
  font-size: 30rpx;
  color: gray;
}

.vNewsList-detail .viewNum {
  float: left;
  position: relative;
}

.vNewsList-detail .viewNum image {
  width: 40rpx;
  height: 40rpx;
}

.vNewsList-detail .viewNum text {
  font-size: 30rpx;
  color: gray;
  position: relative;
  top: -8rpx;
  left: 10rpx;
}

.vNewsList-detail .newsPost {
  width: 100%; 
}

.vNewsList-detail .newsPost image {
  width: 100%;
  height: 500rpx;
}
.vNewsList-detail .newsDetail{
  width: 95%;
  margin: 30rpx auto;
}
