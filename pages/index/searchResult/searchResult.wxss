@import "/template/vNewsList/vNewsList.wxss";
@import "/template/vProductList/vProductList-1.wxss";

.searchInput {
  display: flex;
  margin: auto;
  width: 95%;
  justify-content: space-around;
  align-items: center;
}

.searchInput .vSearch {
  width: 85%;
  margin: 20rpx auto;
  text-align: center;
  height: 50rpx;
}

.searchInput .cancel {
  color: #323232;
  font-weight: 550;
  font-size: 30rpx;
}

.searchInput .vSearch .vSearch-inp {
  font-size: 30rpx;
  background: #f4f4f4;
  height: 40rpx;
  width: 100%;
}

.searchInput .vSearch .vSearch-icon {
  position: relative;
  left: -129rpx;
  top: -50rpx;
  z-index: 10;
}

.inputSocorr {
  border-top: solid 1px #c2c2c2;
  border-bottom: solid 1px #c2c2c2;
  width: 100%;
  height: 60rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
  box-sizing: border-box;
  padding: 0 15rpx;
}

.inputSocorr .inputContent {
  font-size: 28rpx;
  color: #676767;
}

.inputSocorr .deImg {
  width: 30rpx;
  height: 30rpx;
}

.searchHistory {
  padding-left: 15rpx;
}

.searchHistory .searchHistoryItem {
  color: #000;
  line-height: 60rpx;
}

.searchResult {
  margin-top: 20rpx;
}

.searchResult .noResult {
  text-align: center;
  font-size: 30rpx;
  color: gray;
}

.searchResult .result .news .title {
  font-size: 40rpx;
  padding-left: 30rpx;
  width: 100%;
  box-sizing: border-box;
}

.searchResult .result .product .title {
  font-size: 40rpx;
  padding-left: 30rpx;
  width: 100%;
  box-sizing: border-box;
}
