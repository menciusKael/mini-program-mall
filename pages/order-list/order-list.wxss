page {
  background: #fff;
}

.container {
  width: 100%;
}

.statusBox {
  display: flex;
  justify-content: space-around;
  font-size: 26rpx;
  padding-top: 20rpx;
  
}

.statusBox .stateItem {
  flex-grow: 20%;
  width: 15%;
  text-align: center;
  margin: auto;
  padding-bottom: 20rpx;
  font-size: 30rpx;
}

/* 选中样式 */

.stateActive {
  border-bottom: solid 3rpx #ff4200;
  color: #ff4200;
  padding-bottom: 10rpx;
  box-sizing: border-box;
}

.allOrderBox {
  font-size: 28rpx;
  border-top: solid 6rpx #e8e8e8;
  padding: 20rpx 20rpx 30rpx 20rpx;
}

.allOrderBox .topInfoBox {
  display: flex;
  justify-content: space-between;
}

.allOrderBox .topInfoBox .timeAndOrderNum {
  display: flex;
  flex-direction: column;
}

.allOrderBox .topInfoBox .state {
  color: #ff4402;
  align-self: center;
  font-size: 32rpx;
  font-weight: 500;
}

.proInfoBox {
  margin-top: 20rpx;
  border-bottom: solid 2rpx #e8e8e8;
  padding-bottom: 10rpx;
  display: flex;
}

.proInfoBox .proImg {
  width: 200rpx;
  height: 200rpx;
  flex-basis: 30%;
}

.proInfoBox .proInfo {
  display: flex;
  flex-direction: column;
  justify-content: space-around;
  flex-basis: 68%;
  margin-left: 10rpx;
}

.proInfoBox .proInfo .size {
  color: #959595;
}

.proInfoBox .proInfo .price {
  color: #fe4300;
}

.proInfoBox .shopNum {
  align-self: flex-end;
  flex-basis: 2%;
}

.priceAndOrderActionBox {
  display: flex;
  justify-content: flex-end;
  padding-top: 20rpx;
  padding-bottom: 30rpx;
}

.priceAndOrderActionBox .priceAndOrderAction .payMoney {
  text-align: right;
  font-size: 32rpx;
  font-weight: 500;
  margin-bottom: 15rpx;
}

.priceAndOrderActionBox .priceAndOrderAction .payMoney .money {
  color: #ff4303;
}

.priceAndOrderActionBox .priceAndOrderAction .orderActions {
  display: flex;
}

.priceAndOrderActionBox .priceAndOrderAction .orderActions .orderAction {
  width: 150rpx;
  height: 50rpx;
  display: flex;
  align-items: center;
  justify-content: center;     
  margin-left: 15rpx;
  border: solid 3rpx #212121;
  box-sizing: border-box;
}

.priceAndOrderActionBox .priceAndOrderAction .orderActions .payMoneys {
  width: 100rpx;
  height: 50rpx;
  text-align: center;
  line-height: 50rpx;
  margin-left: 15rpx;
  color: white;
  border-radius: 5rpx;
  background: #ff4200;
}

.priceAndOrderActionBox .priceAndOrderAction .orderActions  .evaluate {
  width: 100rpx;
  height: 50rpx;
  text-align: center;
  line-height: 50rpx;
  margin-left: 15rpx;
  border: solid 3rpx #212121;
  box-sizing: border-box;
}
