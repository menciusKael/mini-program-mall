page {
  min-height: 100%;
  background-color: #f2f2f2;
}

.container {
  background-color: #f2f2f2;
  min-height: 100%;
}

/* 购物车为空 */

.title-box {
  width: 100%;
  padding-top: 330rpx;
  text-align: center;
  font-size: 28rpx;
  color: #999;
  background: url(https://cdn.it120.cc/images/weappshop/icon-cart.png) no-repeat center 205rpx;
  background-size: 100rpx auto;
  margin-bottom: 50rpx;
}

.toIndexBtn {
  color: #fff;
  background: #e64340;
  border-radius: 6px;
  width: 300rpx;
  height: 70rpx;
  line-height: 70rpx;
  text-align: center;
  font-size: 28rpx;
  margin: auto;
}

/* 购物车 */

/* checkbox-group盒子 */

.goodsListBox {
  height: 100%;
}

.goodsListBox .goodsListItem {
  border-bottom: solid 0.5rpx #ccc;
  width: 100%;
  /* padding-left: 20rpx; */
  padding: 20rpx 0 30rpx 30rpx;
  box-sizing: border-box;
}

/* 去除checkbox默认样式 */

checkbox .wx-checkbox-input {
  border-radius: 50%;
  width: 40rpx;
  height: 40rpx;
}

/* 商品信息盒子 */

.goodsListBox .goodsListItem .goodImgAndInfo {
  display: flex;
  margin-top: 20rpx;
  box-sizing: border-box;
  width: 100%;
  position: relative;
}

.goodsListBox .goodsListItem .goodImgAndInfo .goodsImg .img {
  width: 150rpx;
  height: 150rpx;
  margin-left: 10rpx;
}

/* 商品信息 */

.goodsListBox .goodsListItem .goodImgAndInfo .goodInfo {
  display: flex;
  flex-direction: column;
  font-size: 26rpx;
  margin-left: 35rpx;
  justify-content: space-around;
  width: 250rpx;
  padding-bottom: 10rpx;
  box-sizing: border-box;
}

.goodsListBox .goodsListItem .goodImgAndInfo .goodInfo .size {
  color: #999;
  display: flex;
  white-space: nowrap;
}

.goodsListBox .goodsListItem .goodImgAndInfo .goodInfo .price {
  color: red;
}

/* 删除 */

.goodsListBox .goodsListItem .goodImgAndInfo .delete {
  position: absolute;
  top: 7rpx;
  right: -204rpx;
}

.goodsListBox .goodsListItem .goodImgAndInfo .delete .img {
  width: 35rpx;
  height: 35rpx;
}

/* 数量加减 */

.goodsListBox .goodsListItem .goodImgAndInfo .buyNum {
  display: flex;
  position: absolute;
  right: -200rpx;
  bottom: 12rpx;
}

.goodsListBox .goodsListItem .goodImgAndInfo .buyNum .inp {
  width: 60rpx;
  height: 48rpx;
  min-height: 48rpx;
  text-align: center;
  font-size: 24rpx;
  border: 1rpx solid #ccc;
}

.goodsListBox .goodsListItem .goodImgAndInfo .buyNum .addBtn {
  width: 50rpx;
  height: 48rpx;
  line-height: 48rpx;
  min-height: 48rpx;
  text-align: center;
  font-size: 24rpx;
  border: 1rpx solid #ccc;
  border-left: none;
}

.goodsListBox .goodsListItem .goodImgAndInfo .buyNum .cutBtn {
  width: 50rpx;
  height: 48rpx;
  line-height: 48rpx;
  min-height: 48rpx;
  text-align: center;
  font-size: 24rpx;
  border: 1rpx solid #ccc;
  border-right: none;
}

/* 全选、结算 */

.allSelectAndtoPay {
  display: flex;
  justify-content: space-between;
  width: 100%;
  height: 100rpx;
  position: fixed;
  bottom: 0;
  left: 0;
  border-bottom: 1px solid #eee;
  border-top: 1px solid #eee;
  background-color: #fff;
}

.allSelectAndtoPay .toPayBtn {
  width: 240rpx;
  text-align: center;
  line-height: 100rpx;
  background-color: #e64340;
  font-size: 32rpx;
  color: #fff;
}

.allSelectAndtoPay  .allSelTotal {
  display: flex;
  width: 510rpx;
  justify-content: space-between;
  line-height: 100rpx;
  padding: 0 30rpx 0 25rpx;
  font-size: 28rpx;
  box-sizing: border-box;
}

