.productDetail swiper {
  height: 500rpx;
}

.productDetail swiper-item image {
  width: 100%;
  height: 100%;
}

.productDetail .baseInfo {
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  margin-top: 20rpx;
}

.productDetail .baseInfo .priceInfo {
  display: flex;
  flex-direction: column;
  margin-left: 40rpx;
  font-size: 30rpx;
  justify-content: space-between;
}

.productDetail .baseInfo .priceInfo text:last-of-type {
  color: red;
}

.productDetail .baseInfo .beforeBuy {
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  margin-top: 8rpx;
  margin-right: 30rpx;
}

.productDetail .baseInfo .beforeBuy .collect {
  width: 40rpx;
  height: 40rpx;
  margin-bottom: 30rpx;
  margin-left: 99rpx;
}

.cutline {
  width: 100%;
  margin: 0 auto;
  border-top: solid 4rpx lightgray;
  margin-top: 20rpx;
}

.productDetail .chooseSize {
  width: 100%;
  border-bottom: solid 4rpx lightgray;
  height: 70rpx;
  box-sizing: border-box;
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin: 0 auto;
  padding-left: 39rpx;
  padding-right: 32rpx;
}

.detailCommond {
  display: flex;
  width: 100%;
  align-items: center;
}

.detailCommond view {
  width: 50%;
  text-align: center;
  padding: 15rpx 0;
}

.selected {
  border-bottom: solid 2px red;
}

.show {
  display: block;
}

.hidden {
  display: none;
}

.productDetail .buy {
  width: 100%;
  display: flex;
  position: fixed;
  bottom: 0;
}

.productDetail .buy button {
  width: 50%;
  outline: none;
  -webkit-appearance: none;
  border-radius: 0;
  /* cursor: pointer */
}
/* 规格弹窗蒙层 */
.propsPopup{
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  z-index: 4;
}
.propsMask{
  position: fixed;
  top: 0;
  left: 0;
  bottom: 0;
  right: 0;
  background: rgba(0, 0, 0, 0.5);
  z-index: 5;
}
.propsContent{
  position: fixed;
  left: 0;
  bottom: 0;
  width: 100%;
  background: white;
  z-index: 6;
}

.addShopCar{
  width: 100%;
  height: 89rpx;
  text-align: center;
  line-height: 89rpx;
  font-size: 34rpx;
  color: #fff;
  background-color: #e64340;
}
/* 规格 数量加减 */
.buy-num-box {
  display: flex;
  justify-content: space-between;
  padding: 30rpx 30rpx 48rpx 0;
  margin-left: 30rpx;
  border-top: 1px solid #eee;
  margin-top: 30rpx;
  align-items: center;
}

.num-label {
  font-size: 26rpx;
  color: #000;
}

.buy-num-box .num-box {
  display: flex;
}

.buy-num-box .num-box .num-jian, .buy-num-box .num-box .num-input,
.buy-num-box .num-box .num-jia {
  width: 80rpx;
  height: 64rpx;
  line-height: 62rpx;
  text-align: center;
  border: 1px solid #eee;
}

.buy-num-box .num-box .num-input {
  font-size: 28rpx;
}

.buy-num-box .num-box .num-input input {
  height: 100%;
}

.popup-join-btn {
  width: 100%;
  height: 89rpx;
  text-align: center;
  line-height: 89rpx;
  font-size: 34rpx;
  color: #fff;
  background-color: #e64340;
}

.buy-num-box .num-box .noLongerCut {
  background-color: #f5f5f9;
}

/* 规格 商品信息 */
.pop-goods-info {
  display: flex;
  flex-direction: row;
  align-items: center;
  margin-left: 30rpx;
  padding: 30rpx 0;
  border-bottom: 1px solid #eee;
}

.pop-img-box {
  width: 120rpx;
  height: 120rpx;
  overflow: hidden;
  margin-right: 26rpx;
}

.pop-img-box .goods-thumbnail {
  width: 120rpx;
  height: 120rpx;
}

.pop-goods-title {
  width: 484rpx;
  text-overflow: ellipsis;
  white-space: nowrap;
  overflow: hidden;
  font-size: 26rpx;
  color: #000;
}

.pop-goods-price {
  font-size: 26rpx;
  color: #e64340;
  margin-top: 20rpx;
}

.pop-goods-close {
  width: 36rpx;
  height: 36rpx;
  flex: 1;
  background: url("https://cdn.it120.cc/images/weappshop/popup-close.png") no-repeat center center;
  background-size: 36rpx auto;
  align-self: flex-start;
  margin-top: -10rpx;
  
}