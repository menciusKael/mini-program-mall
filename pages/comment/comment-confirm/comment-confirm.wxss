.commentBox .topProInfo {
  width: 100%;
  height: 135rpx;
  display: flex;
  justify-content: flex-start;
  align-items: center;
  padding-left: 30rpx;
  border-bottom: solid 1rpx #dad9d9;
  font-size: 28rpx;
}

.commentBox .topProInfo .img {
  width: 85rpx;
  height: 85rpx;
  margin-right: 20rpx;
}

.startComBox {
  padding-left: 27rpx;
  padding-bottom: 35rpx;
  border-bottom: solid 1px #e8e8e8;
  font-size: 28rpx;
}

.startComBox .startCom {
  display: flex;
  margin-top: 30rpx;
  align-items: center;
}

.startComBox .startCom .img {
  width: 40rpx;
  height: 40rpx;
  margin-left: 30rpx;
}

.comAndPicture {
  width: 100%;
  padding-top: 25rpx;
}

.comAndPicture .txtAre {
  width: 95%;
  margin: auto;
  font-size: 28rpx;
}

.comAndPicture .addPicture {
  display: flex;
  flex-wrap: wrap;
  width: 95%;
  margin: auto;
  box-sizing: border-box;
  justify-content: flex-start;
}

.comAndPicture .addPicture .img {
  height: 135rpx;
  flex-basis: 19%;
  margin-right: 10rpx;
}

.comAndPicture .addPicture .addPictureBtn {
  flex-basis: 19%;
  height: 135rpx;
  border: solid 1px #c6c6c6;
  box-sizing: border-box;
  font-size: 28rpx;
  color: #c6c6c6;
  display: flex;
  flex-direction: column;
  justify-content: space-around;
  align-items: center;
}

.comAndPicture .addPicture .addPictureBtn .imgCamer {
  width: 70rpx;
  height: 70rpx;
}

.commentBox .release {
  position: fixed;
  bottom: 15rpx;
  width: 95%;
  height: 70rpx;
  background: #ff4200;
  color: white;
  left: 18rpx;
  font-size: 30rpx;
  text-align: center;
  line-height: 70rpx;
  border-radius: 10rpx;
}
